import java.util.*;
public class Main
{
    public static int res(int n){
        if(n==1){
            return 1;
        }
        else if(n==2){
            return 2;
        }
        return res(n-1)+(n-2);
    }
	public static void main(String[] args) {
		Scanner SC = new Scanner(System.in);
		int n=SC.nextInt();
		System.out.println(res(n));
	}
}
